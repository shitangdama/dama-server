{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": false,
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}